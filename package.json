{
  "name": "maximax-advertising",
  "version": "1.0.0",
  "description": "Mobile Billboard Advertising Company - South Florida",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000",
    "build": "npm run test:all && echo 'Build successful - All tests passed'",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --config jest.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:accessibility": "pa11y-ci",
    "test:lighthouse": "lhci autorun",
    "test:visual": "percy exec -- npm run test:e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:all": "npm run lint && npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:accessibility",
    "lint": "eslint . --ext .js,.html --fix",
    "lint:css": "stylelint 'css/**/*.css' --fix",
    "format": "prettier --write '**/*.{js,css,html,json,md}'",
    "validate": "npm run lint && npm run test",
    "precommit": "npm run validate",
    "prepare": "husky install",
    "install:browsers": "playwright install chromium firefox webkit"
  },
  "keywords": [
    "mobile advertising",
    "billboard",
    "LED trucks",
    "South Florida"
  ],
  "author": "Maximax Advertising",
  "license": "ISC",
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "axe-playwright": "^1.2.3",
    "babel-jest": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-jest": "^27.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^15.2.0",
    "live-server": "^1.2.2",
    "pa11y-ci": "^3.1.0",
    "prettier": "^3.1.0",
    "stylelint": "^16.0.0",
    "stylelint-config-standard": "^35.0.0",
    "wait-on": "^7.2.0",
    "web-vitals": "^3.5.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{html,json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js",
      "!js/**/*.spec.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
